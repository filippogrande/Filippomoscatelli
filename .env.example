# Esempio di file .env per configurazioni (NON commitare in Git)
# Copia questo file come .env e personalizza i valori

# Docker Configuration
IMAGE_NAME=filippomoscatelli/cv-website
IMAGE_TAG=latest
CONTAINER_NAME=filippomoscatelli-cv-local
LOCAL_PORT=8080

# Kubernetes Configuration
NAMESPACE=default
CLUSTER_CONTEXT=default
REPLICAS=2

# Domain Configuration (per Ingress)
DOMAIN=cv.filippomoscatelli.com
TLS_SECRET_NAME=filippomoscatelli-cv-tls

# Registry Configuration (se usi un registry privato)
REGISTRY_URL=
REGISTRY_USERNAME=
REGISTRY_PASSWORD=

# Monitoring (opzionale)
ENABLE_METRICS=true
METRICS_PORT=9090

# SSL/TLS Configuration
CERT_MANAGER_ISSUER=letsencrypt-prod
ENABLE_SSL_REDIRECT=true

# Performance Tuning
NGINX_WORKER_PROCESSES=1
NGINX_WORKER_CONNECTIONS=1024
CPU_REQUEST=50m
CPU_LIMIT=100m
MEMORY_REQUEST=64Mi
MEMORY_LIMIT=128Mi

# HPA Configuration
HPA_MIN_REPLICAS=2
HPA_MAX_REPLICAS=10
HPA_CPU_THRESHOLD=70
HPA_MEMORY_THRESHOLD=80
